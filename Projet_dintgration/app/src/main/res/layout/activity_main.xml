                    android:onClick="openMediaActivity"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_file" />

                <ImageButton
                    android:id="@+id/mediaActivityButton12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:onClick="openMediaActivity"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_file" />

                <ImageButton
                    android:id="@+id/mediaActivityButton13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:onClick="openMediaActivity"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_file" />

                <ImageButton
                    android:id="@+id/mediaActivityButton14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:onClick="openMediaActivity"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_file" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/favoris"
            style="@style/basic_title_text"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_above="@+id/slideshow2"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="-100dp"
            android:text="@string/homescreen_favoris" />

        <TextView
            android:id="@+id/liste_de_lecture"
            style="@style/basic_title_text"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_above="@+id/slideshow2"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="-350dp"
            android:text="@string/homescreen_listes_lecture" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="18dp"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_hamburger_1" />

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>